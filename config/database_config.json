{
    "connection":{
        "url":"localhost",
        "port":3306,
        "user":"root",
        "pass":"",
        "database":"db_test_2"
    },
    "structure":{
        "*":[
            "id UUID DEFAULT UUID() PRIMARY KEY",
            "created_at DATETIME(6) NOT NULL DEFAULT (UTC_TIMESTAMP(6))"
        ],
        "user": [
            "private CHAR(16) NOT NULL UNIQUE",
            "username VARCHAR(64) NOT NULL UNIQUE",
            "first_name VARCHAR(64)",
            "last_name VARCHAR(64)",
            "access TINYINT NOT NULL DEFAULT 0",
            "created_by UUID",
            "dni VARCHAR(32)",
            "birth_date DATE",
            "color CHAR(6)",
            "FOREIGN KEY (created_by) REFERENCES user(id)"
        ],
        "session_token": [
            "user_id UUID",
            "FOREIGN KEY (user_id) REFERENCES user(id)"
        ],
        "event_in": [
            "user_id UUID",
            "FOREIGN KEY (user_id) REFERENCES user(id)"
        ],
        "event_out": [
            "event_in_id UUID NOT NULL UNIQUE",
            "user_id UUID",
            "FOREIGN KEY (user_id) REFERENCES user(id)"
        ],
        "image":[
            "name VARCHAR(64)",
            "description VARCHAR(256)",
            "format VARCHAR(64) NOT NULL",
            "height BIGINT NOT NULL",
            "width BIGINT NOT NULL",
            "created_by UUID",
            "FOREIGN KEY (created_by) REFERENCES user(id)"
        ],
        "department":[
            "name VARCHAR(64)",
            "description VARCHAR(256)"
        ],
        "access":[
            "name VARCHAR(64)",
            "description VARCHAR(256)"
        ],
        "email":[
            "email VARCHAR(64)",
            "added_by UUID",
            "FOREIGN KEY (added_by) REFERENCES user(id)"
        ]
    },
    "defaults":{
        "limit":100,
        "offset":0,
        "orderBy":"created_at",
        "order":"desc",
        "userType":"id"
    },
    "limits":{
        "nameMaxLength":64,
        "nameMinLength":0,
        "sessionLength":64,
        "privateLength":16,
        "totpKeyLength":6,
        "accessMin":-1,
        "accessMax":3,
        "limitMin":0,
        "limitMax":1000,
        "offsetMin":0,
        "offsetMax":1000
    },
    "queries":{
        "getAllUsers":"SELECT * FROM user",
        "getIdFromUser":"SELECT id FROM user WHERE user = ?",
        "getSessionFromUser":"SELECT token FROM session_token JOIN user ON user.id = user_id WHERE username = ?",
        "getSessionCountFromToken":"SELECT COUNT(*) FROM session_token WHERE token = ?",
        "getPrivateFromUsername":"SELECT private FROM user WHERE username = ?",
        "getUsernameFromToken":"SELECT username FROM user JOIN session_token ON user_id = user.id WHERE token = ?",
        "getIdFromUserWithAccess":"SELECT id FROM user WHERE access <= ?",
        "setSession":"INSERT INTO session_token (user_id, token) VALUES (?, ?)",
        "setNewUser":"INSERT INTO user (private, username, first_name, last_name, access, created_by, dni, birth_date, color) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?)"
    }
}
