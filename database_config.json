{
    "connection":{
        "url":"localhost",
        "port":3306,
        "user":"root",
        "pass":"",
        "database":"db1"
    },
    "structure":{
        "*":[
            "id BIGINT AUTO_INCREMENT PRIMARY KEY",
            "created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP"
        ],
        "user": [
            "private CHAR(16) NOT NULL UNIQUE",
            "username VARCHAR(64) NOT NULL UNIQUE",
            "first_name VARCHAR(64)",
            "last_name VARCHAR(64)",
            "access_lvl TINYINT NOT NULL DEFAULT 0",
            "created_by BIGINT",
            "FOREIGN KEY (created_by) REFERENCES user(id)"
        ],
        "session_token": [
            "user_id BIGINT",
            "FOREIGN KEY (user_id) REFERENCES user(id)",
            "token CHAR(64) NOT NULL UNIQUE"
        ],
        "event_in": [
            "user_id BIGINT",
            "FOREIGN KEY (user_id) REFERENCES user(id)"
        ],
        "event_out": [
            "event_in_id BIGINT NOT NULL UNIQUE",
            "user_id BIGINT",
            "FOREIGN KEY (user_id) REFERENCES user(id)"
        ],
        "image":[
            "name VARCHAR(64)",
            "description VARCHAR(256)",
            "format VARCHAR(64) NOT NULL",
            "height BIGINT NOT NULL",
            "width BIGINT NOT NULL",
            "created_by BIGINT",
            "FOREIGN KEY (created_by) REFERENCES user(id)"
        ],
        "department":[
            "name VARCHAR(64)",
            "description VARCHAR(256)"
        ]
    },
    "defaults":{
        "limit":100,
        "offset":0,
        "orderBy":"id",
        "order":"desc",
        "user_type":"id"
    },
    "limits":{
        "name_min_length":64,
        "name_max_length":0,
        "session_length":64,
        "private_length":16,
        "totp_key_length":6,
        "access_min":-1,
        "access_max":3,
        "limit_min":0,
        "limit_max":1000,
        "offset_min":0,
        "offset_max":1000
    },
    "queries":{
        "getAllUsers":"SELECT * FROM user",
        "getIdFromUser":"SELECT id FROM user WHERE user = ?",
        "getSessionFromUser":"SELECT token FROM session_token JOIN user ON user.id = user_id WHERE username = ?",
        "getSessionCountFromToken":"SELECT COUNT(*) FROM session_token WHERE token = ?",
        "getPrivateFromUsername":"SELECT private FROM user WHERE username = ?",
        "getUsernameFromToken":"SELECT username FROM user JOIN session_token ON user_id = user.id WHERE token = ?",
        "getIdFromUserWithAccess":"SELECT id FROM user WHERE access_lvl <= ?",
        "setSession":"INSERT INTO session_token (user_id, token) VALUES (?, ?)"
    }
}
