            "y INT",
            "rep INT",
            "_count INT",
            "active BOOL",
            "FOREIGN KEY (chronogram_id) REFERENCES chronogram(id)"
        ],
        "department":[
            "id INT PRIMARY KEY AUTO_INCREMENT",
